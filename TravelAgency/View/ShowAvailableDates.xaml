        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ShowAvailableDates" Height="400" Width="400">
    <Grid>
        <!--Label x:Name="Labela1" Content="Prikaz slobodnih datuma" FontSize="20" FontWeight="Bold" Margin="135,119,450,242"
               HorizontalAlignment="Center"></Label-->
        <Calendar x:Name="Calendar" SelectionMode="MultipleRange" Margin="89,94,89,95" 
                  DisplayDateStart="{Binding EnteredFirstDay}" DisplayDateEnd="{Binding EnteredLastDay}"></Calendar>
    </Grid>
</Window>
