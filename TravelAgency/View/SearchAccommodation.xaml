<Window x:Class="TravelAgency.View.SearchAccommodation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SearchAccommodation" Height="350" Width="800">
    <Grid>
        <DataGrid Background="#FFE5E5E5" ItemsSource="{Binding Accommodations}" 
                  SelectedItem="{Binding Path=SelectedAccommodation, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True" Margin="10,10,10,60">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv" Binding="{Binding Name}" Width="1*"/>
                <DataGridTextColumn Header="Grad" Binding="{Binding Town}" Width="1*"/>
                <DataGridTextColumn Header="Drzava" Binding="{Binding Country}" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="Search" Margin="5, 270, 5, 5" Content="Pretraži smeštaj" Click="SearchAccommodationClick" 
                Width="100" Height="30"></Button>
    </Grid>
</Window>
