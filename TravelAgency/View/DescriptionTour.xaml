<Window x:Class="TravelAgency.View.DescriptionTour"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.View"
        mc:Ignorable="d"
        Title="Opis ture" Height="280" Width="400" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="descriptionTextBox" VerticalAlignment="Top" Height="198"
                   TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="24,10,24,0"
                   Text="{Binding Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
        <Button x:Name="confirmButton" Content="Potvrdi" Margin="0,0,266,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="50"
                Click="ConfirmButtonClick"/>
        <Button x:Name="cancelButton" Content="Odustani" Margin="0,0,104,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="58"
                Click="CancelButtonClick"/>
    </Grid>
</Window>
