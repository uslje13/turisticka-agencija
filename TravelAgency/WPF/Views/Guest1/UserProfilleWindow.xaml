<Window x:Class="SOSTeam.TravelAgency.WPF.Views.Guest1.UserProfilleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SOSTeam.TravelAgency.WPF.Views.Guest1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="PowderBlue"
        Title="UserProfille" Height="768" Width="1024">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WPF/Views/Guest1/Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="/WPF/Views/Guest1/Styles/DataGridStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.15*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Image Source="/Resources/Icons/Guest1/user_siluet.png" 
                   Margin="40,21,778,22"/>
            <TextBlock Foreground="MidnightBlue" x:Name="UsersName" FontSize="50" FontWeight="Bold" FontStyle="Italic" Margin="204,61,533,116" TextAlignment="Center"></TextBlock>
            <Image Source="/Resources/Icons/Guest1/verification.png" Margin="491,71,452,116"/>
            <Button x:Name="InboxButton" Command="{Binding goToInboxCommand}" FontSize="25" FontWeight="DemiBold"
                    Foreground="MidnightBlue"
                HorizontalContentAlignment="Center" Background="PowderBlue" BorderBrush="PowderBlue"
                Margin="781,52,42,107" GotFocus="TestOpeningInbox">
                <StackPanel Orientation="Horizontal" Width="200" Height="82">
                    <Canvas Width="200">
                        <Image Source="/Resources/Icons/Guest1/inbox.png" Width="105" Height="72" Canvas.Left="17" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock Width="91" Height="38" Canvas.Left="109" Canvas.Top="22" HorizontalAlignment="Left" 
                                   VerticalAlignment="Center"><Run Text="Inbox"/></TextBlock>
                    </Canvas>
                </StackPanel>
            </Button>
            <TextBlock x:Name="Messages" FontSize="25" FontWeight="DemiBold" 
                       Margin="811,78,163,123"><Run/></TextBlock>
        </Grid>
        <Grid Grid.Row="1">
            <Label Foreground="MidnightBlue" FontSize="25" FontWeight="Bold" Margin="10,0,588,203">Vaše predstojeće rezervacije :</Label>
            <DataGrid Background="#FFE5E5E5" ItemsSource="{Binding finishedReservations}" Style="{StaticResource DataGridStyle}"
                  AutoGenerateColumns="False" SelectionMode="Single" CanUserResizeRows="False"
                  IsReadOnly="True" Margin="15,165,15,31">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Naziv smještaja" Binding="{Binding AccommodationName}" Width="1*"/>
                    <DataGridTextColumn Header="Grad" Binding="{Binding AccommodationCity}" Width="1*"/>
                    <DataGridTextColumn Header="Država" Binding="{Binding AccommodationCountry}" Width="1*"/>
                    <DataGridTextColumn Header="Tip smještaja" Binding="{Binding AccommodationType}" Width="1*"/>
                    <DataGridTextColumn Header="Prvi dan" Binding="{Binding FirstDayStr}" Width="1*"/>
                    <DataGridTextColumn Header="Poslednji dan" Binding="{Binding LastDayStr}" Width="1*"/>
                    <DataGridTextColumn Header="Trajanje rezervacije" Binding="{Binding DaysDuration}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Label Foreground="MidnightBlue" FontSize="25" FontWeight="Bold" Margin="10,124,588,79">Vaše dosadašnje rezervacije :</Label>
            <TextBlock Foreground="MidnightBlue" x:Name="ResNumber" FontSize="18" FontWeight="Bold" FontStyle="Italic" Margin="724,132,15,107"></TextBlock>
            <DataGrid Background="#FFE5E5E5" ItemsSource="{Binding futuredReservations}" CanUserResizeRows="False"
                  AutoGenerateColumns="False" SelectionMode="Single" Style="{StaticResource DataGridStyle}"
                  IsReadOnly="True" Margin="15,41,15,155">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Naziv smještaja" Binding="{Binding AccommodationName}" Width="1*"/>
                    <DataGridTextColumn Header="Grad" Binding="{Binding AccommodationCity}" Width="1*"/>
                    <DataGridTextColumn Header="Država" Binding="{Binding AccommodationCountry}" Width="1*"/>
                    <DataGridTextColumn Header="Tip smještaja" Binding="{Binding AccommodationType}" Width="1*"/>
                    <DataGridTextColumn Header="Prvi dan" Binding="{Binding FirstDayStr}" Width="1*"/>
                    <DataGridTextColumn Header="Poslednji dan" Binding="{Binding LastDayStr}" Width="1*"/>
                    <DataGridTextColumn Header="Trajanje rezervacije" Binding="{Binding DaysDuration}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Command="{Binding goToRequestsStatus}" Margin="710,-19,15,244" FontSize="24" FontWeight="DemiBold"
                    Foreground="MidnightBlue"
                    Background="PowderBlue" BorderBrush="PowderBlue" Name="StatusesButton">
                <StackPanel Orientation="Horizontal" Width="326" Height="62">
                    <TextBlock Width="229" Height="31" TextAlignment="Right"><Run Text="Status Vaših zahtjeva"/></TextBlock>
                    <Image Source="/Resources/Icons/Guest1/statuses.png" Width="52" Height="44"/>
                </StackPanel>
            </Button>
        </Grid>
        <Grid Grid.Row="1" Margin="0,250,0,0" Grid.RowSpan="2">
            <Label Foreground="MidnightBlue" FontSize="20" FontWeight="Bold" FontStyle="Italic" 
                   Margin="423,6,109,181">Vaše otkazane rezervacije su na sledećem linku :</Label>
            <Button Command="{Binding CanceledReservationsCommand}" FontSize="20" Content="otkazano" Name="CanceledReportButton"
                    Margin="881,5,10,195" Background="PowderBlue" Foreground="MidnightBlue"
                    BorderBrush="PowderBlue" FontWeight="Bold" FontStyle="Italic"/>
            <Button Command="{Binding goToSearchCommand}" Width="110" Height="43" 
                    Style="{StaticResource ButtonStyle}" FontSize="17" Content="Glavni meni"
                    Margin="838,128,53,57">
            </Button>
            <Button Command="{Binding SignOutCommand}" Width="110" Height="43" 
                    Style="{StaticResource ButtonStyle}" FontSize="17" Content="Odjavi se" 
                    Margin="646,128,241,57">
            </Button>
        </Grid>
    </Grid>
</Window>
