<Page x:Class="SOSTeam.TravelAgency.WPF.Views.Guest2.ActiveTourPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SOSTeam.TravelAgency.WPF.Views.Guest2"
      mc:Ignorable="d" 
      Height="800" Width="990"
      Title="ActiveTourPage"
      Background="AliceBlue"
      FontFamily="Microsoft Sans Serif">

    <Grid>
        <Border Margin="0,0,0,233">
            <StackPanel Margin="250,90,250,-22">
                <Border Height="362">
                    <Image Source="{Binding ActiveTour.TourImagePath}" />
                </Border>
                <Border Height="71">
                    <TextBlock FontSize="24" Text="{Binding ActiveTour.TourName}" TextAlignment="Center" Margin="0,27,0,10"></TextBlock>
                </Border>
            </StackPanel>
        </Border>
        <Border Margin="0,567,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,3,10">
                <TextBlock  Text="{Binding ActiveTour.CheckpointMessage}" FontSize="24" Height="34" Margin="240,0,0,0" />
                <Image Source="/Resources/Icons/checkpoint.png" Height="32" Width="44" Margin="0,0,0,14" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
