<Page x:Class="SOSTeam.TravelAgency.WPF.Views.TourGuide.GuestAttendancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SOSTeam.TravelAgency.WPF.Views.TourGuide"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="430"
      Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
      Title="GuestAttendancePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.7*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/Resources/Icons/earth.png" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50" 
               Margin="130,0,0,0"/>
        <Label Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Tour name"  
               Margin="190,0,0,0" FontSize="22"/>
        <Image Grid.Row="1" Source="/Resources/Icons/checkpoint.png" HorizontalAlignment="Left" VerticalAlignment="Center" Width="25" 
               Margin="10 0 0 0">
        </Image>
        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" 
               Margin="30 0 0 0" Content="Checkpoint name" FontSize="16"></Label>
    </Grid>
</Page>
